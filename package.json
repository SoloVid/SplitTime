{
  "name": "splittime",
  "version": "0.2.0",
  "description": "2.5D clock-based game engine for Maven",
  "homepage": "https://github.com/SoloVid/SplitTime",
  "repository": {
    "type": "git",
    "url": "github:SoloVid/SplitTime"
  },
  "private": true,
  "exports": {
    ".": "./lib/api/index.js",
    "./ability": "./lib/api/ability.js",
    "./agent": "./lib/api/agent.js",
    "./body": "./lib/api/body.js",
    "./controls": "./lib/api/controls.js",
    "./conversation": "./lib/api/conversation.js",
    "./direction": "./lib/api/direction.js",
    "./file": "./lib/api/file.js",
    "./graphics": "./lib/api/graphics.js",
    "./math": "./lib/api/math.js",
    "./npc": "./lib/api/npc.js",
    "./particles": "./lib/api/particles.js",
    "./physics": "./lib/api/physics.js",
    "./player": "./lib/api/player.js",
    "./system": "./lib/api/system.js",
    "./time": "./lib/api/time.js",
    "./ui": "./lib/api/ui.js",
    "./utils": "./lib/api/utils.js"
  },
  "bin": {
    "splittime": "bin/splittime"
  },
  "scripts": {
    "build": "node build",
    "build:type-declarations": "tsc --emitDeclarationOnly",
    "clean": "rm -rf lib",
    "modify-files": "node -r esbuild-register src/build-tools/project/modify-files",
    "start": "node lib/editor-server.js",
    "test": "run-p test:*",
    "test:types": "tsc --noEmit",
    "test:unit": "uts -r esbuild-register src/engine-test"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.15.2",
    "@types/convert-source-map": "^1.5.1",
    "@types/dropzone": "~5.7.4",
    "@types/express": "^4.17.11",
    "@types/glob": "^7.1.3",
    "@types/howler": "~2.1.2",
    "@types/json-stringify-safe": "^5.0.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.11.64",
    "@types/offscreencanvas": "^2019.6.3",
    "@types/sharp": "^0.31.1",
    "ansicolor": "^1.1.100",
    "diff2html": "^3.4.31",
    "dropzone": "~5.7.6",
    "esbuild-register": "^3.3.3",
    "howler": "~2.1.3",
    "ignore": "^5.2.4",
    "isbinaryfile": "^5.0.0",
    "json-stringify-safe": "^5.0.1",
    "multer": "^1.4.5-lts.1",
    "npm-run-all": "^4.1.5",
    "sharp": "^0.31.3",
    "strip-json-comments": "^5.0.0",
    "sweetalert": "^2.1.2",
    "typescript": "~4.8",
    "under-the-sun": "^1.0.1",
    "yaml": "^2.2.1"
  },
  "dependencies": {
    "async-mutex": "^0.4.0",
    "chokidar": "^3.5.3",
    "esbuild": "~0.17",
    "express": "^4.17.1",
    "fast-deep-equal": "^3.1.3",
    "find-root": "^1.1.0",
    "glob": "^7.1.6",
    "preact": "^10.11.3",
    "ts-brand": "^0.0.2"
  },
  "files": [
    "*",
    "bin/*",
    "lib/**/*",
    "src/**/*",
    "static/**/*"
  ]
}
