{
  "name": "splittime",
  "version": "0.2.0",
  "description": "2.5D clock-based game engine for Maven",
  "homepage": "https://github.com/SoloVid/SplitTime",
  "repository": {
    "type": "git",
    "url": "github:SoloVid/SplitTime"
  },
  "private": true,
  "main": "build/engine.js",
  "module": "build/engine.mjs",
  "types": "build/@types/splitTime/engine/splitTime.d.ts",
  "bin": {
    "splittime": "bin/splittime"
  },
  "scripts": {
    "build:build-cli": "esbuild src/build-tools/build-cli.ts --bundle --platform=node --outfile=build/build-cli.js --external:esbuild",
    "build:editor-server": "esbuild src/editor/server/main.ts --bundle --platform=node --outfile=build/editor-server.js",
    "build:engine-iife": "esbuild src/engine/splitTime.ts --global-name=splitTime --bundle --platform=browser --outfile=build/engine.js",
    "build:engine": "esbuild src/engine/splitTime.ts --bundle --format=esm --outfile=build/engine.mjs",
    "build:test-cli": "esbuild src/build-tools/build-cli.ts --bundle --platform=node --outfile=build/test-cli.js --external:typescript/bin/tsc",
    "check-types": "tsc -b -f",
    "clean": "rm -rf build",
    "start": "node build/editor-server.js",
    "test0": "node build/engine-test.js",
    "test": "uts -r esbuild-register src/engine-test"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.15.2",
    "@types/convert-source-map": "^1.5.1",
    "@types/express": "^4.17.11",
    "@types/glob": "^7.1.3",
    "@types/howler": "~2.1.2",
    "@types/node": "^16.11.64",
    "@types/offscreencanvas": "^2019.6.3",
    "@types/rrdir": "^8.2.2",
    "@types/uglify-js": "^3.0.2",
    "es6-promise": "^4.2.8",
    "esbuild": "^0.15.10",
    "esbuild-register": "^3.3.3",
    "howler": "~2.1.3",
    "typescript": "~4.8",
    "under-the-sun": "^1.0.1"
  },
  "dependencies": {
    "concat-with-sourcemaps": "^1.1.0",
    "convert-source-map": "^1.7.0",
    "express": "^4.17.1",
    "find-root": "^1.1.0",
    "glob": "^7.1.6",
    "rrdir": "^8.2.1",
    "source-map-support": "^0.5.19",
    "sync-directory": "^2.2.17",
    "uglify-js": "^3.13.0",
    "vue": "^2.6.12",
    "vue-async-computed": "^3.9.0"
  },
  "files": [
    "*",
    "bin/*",
    "build/**/*",
    "src/**/*",
    "static/**/*"
  ]
}
