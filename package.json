{
  "name": "splittime",
  "version": "0.2.0",
  "description": "2.5D clock-based game engine for Maven",
  "homepage": "https://github.com/SoloVid/SplitTime",
  "repository": {
    "type": "git",
    "url": "github:SoloVid/SplitTime"
  },
  "private": true,
  "type0": "module",
  "exports": {
    ".": "./build/api/index.js",
    "./ability": "./build/api/ability.js",
    "./agent": "./build/api/agent.js",
    "./body": "./build/api/body.js",
    "./controls": "./build/api/controls.js",
    "./conversation": "./build/api/conversation.js",
    "./direction": "./build/api/direction.js",
    "./file": "./build/api/file.js",
    "./graphics": "./build/api/graphics.js",
    "./math": "./build/api/math.js",
    "./npc": "./build/api/npc.js",
    "./particles": "./build/api/particles.js",
    "./physics": "./build/api/physics.js",
    "./player": "./build/api/player.js",
    "./system": "./build/api/system.js",
    "./time": "./build/api/time.js",
    "./ui": "./build/api/ui.js",
    "./utils": "./build/api/utils.js"
  },
  "exportsA": {
    ".": {
      "types": "./build/@types/api/index.d.ts",
      "types1": "./build/@types/splitTime/splitTime.d.ts",
      "default": "./build/api/index.js"
    },
    "./ability": {
      "types": "./build/@types/api/ability.d.ts",
      "default": "./build/api/ability.js"
    },
    "./agent": {
      "types": "./build/@types/api/agent.d.ts",
      "default": "./build/api/agent.js"
    },
    "./body": {
      "types": "./build/@types/api/body.d.ts",
      "default": "./build/api/body.js"
    },
    "./controls": {
      "types": "./build/@types/api/controls.d.ts",
      "default": "./build/api/controls.js"
    },
    "./conversation": {
      "types": "./build/@types/api/conversation.d.ts",
      "default": "./build/api/conversation.js"
    },
    "./file": {
      "types": "./build/@types/api/file.d.ts",
      "default": "./build/api/file.js"
    },
    "./math": {
      "types": "./build/@types/api/math.d.ts",
      "default": "./build/api/math.js"
    },
    "./npc": {
      "types": "./build/@types/api/npc.d.ts",
      "default": "./build/api/npc.js"
    },
    "./physics": {
      "types": "./build/@types/api/physics.d.ts",
      "default": "./build/api/physics.js"
    },
    "./player": {
      "types": "./build/@types/api/player.d.ts",
      "default": "./build/api/player.js"
    },
    "./system": {
      "types": "./build/@types/api/system.d.ts",
      "default": "./build/api/system.js"
    },
    "./time": {
      "types": "./build/@types/api/time.d.ts",
      "default": "./build/api/time.js"
    },
    "./ui": {
      "types": "./build/@types/api/ui.d.ts",
      "default": "./build/api/ui.js"
    }
  },
  "bin": {
    "splittime": "bin/splittime"
  },
  "scripts": {
    "build": "run-p build:build-cli build:editor-server build:engine",
    "build:build-cli": "esbuild src/build-tools/build-cli.ts --bundle --platform=node --outfile=build/build-cli.js --external:esbuild",
    "build:editor-server": "esbuild src/editor/server/main.ts --bundle --platform=node --outfile=build/editor-server.js",
    "build:engine": "node bin/internal/build-engine",
    "build:internal-build-cli": "esbuild src/build-tools/internal-build-cli.ts --bundle --platform=node --outfile=build/internal-build-cli.js --external:esbuild",
    "prebuild:type-declarations": "npm run build:internal-build-cli",
    "build:type-declarations:raw": "tsc --emitDeclarationOnly",
    "build:type-declarations:resolve-paths": "node build/internal-build-cli.js resolve-paths",
    "build:type-declarations": "run-s build:type-declarations:raw build:type-declarations:resolve-paths",
    "clean": "rm -rf build",
    "start": "node build/editor-server.js",
    "dev:server": "",
    "test": "run-p test:*",
    "test:types": "tsc --noEmit",
    "test:unit": "uts -r esbuild-register src/engine-test",
    "watch:build:type-declarations": "ts-node-dev --transpile-only src/build-tools/engine/build-type-declarations.ts"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.15.2",
    "@types/convert-source-map": "^1.5.1",
    "@types/express": "^4.17.11",
    "@types/glob": "^7.1.3",
    "@types/howler": "~2.1.2",
    "@types/node": "^16.11.64",
    "@types/offscreencanvas": "^2019.6.3",
    "@types/rrdir": "^8.2.2",
    "@types/uglify-js": "^3.0.2",
    "es6-promise": "^4.2.8",
    "esbuild": "^0.15.10",
    "esbuild-register": "^3.3.3",
    "howler": "~2.1.3",
    "npm-run-all": "^4.1.5",
    "typescript": "~4.8",
    "under-the-sun": "^1.0.1"
  },
  "dependencies": {
    "async-mutex": "^0.4.0",
    "chokidar": "^3.5.3",
    "concat-with-sourcemaps": "^1.1.0",
    "convert-source-map": "^1.7.0",
    "express": "^4.17.1",
    "find-root": "^1.1.0",
    "glob": "^7.1.6",
    "rrdir": "^8.2.1",
    "source-map-support": "^0.5.19",
    "sync-directory": "^2.2.17",
    "ts-node-dev": "^2.0.0",
    "uglify-js": "^3.13.0",
    "vue": "^2.6.12",
    "vue-async-computed": "^3.9.0"
  },
  "files": [
    "*",
    "bin/*",
    "build/**/*",
    "src/**/*",
    "static/**/*"
  ]
}
