{
  "name": "splittime",
  "version": "0.2.0",
  "description": "2.5D clock-based game engine for Maven",
  "homepage": "https://github.com/SoloVid/SplitTime",
  "repository": {
    "type": "git",
    "url": "github:SoloVid/SplitTime"
  },
  "private": true,
  "type0": "module",
  "exports": {
    ".": "./lib/api/index.js",
    "./ability": "./lib/api/ability.js",
    "./agent": "./lib/api/agent.js",
    "./body": "./lib/api/body.js",
    "./controls": "./lib/api/controls.js",
    "./conversation": "./lib/api/conversation.js",
    "./direction": "./lib/api/direction.js",
    "./file": "./lib/api/file.js",
    "./graphics": "./lib/api/graphics.js",
    "./math": "./lib/api/math.js",
    "./npc": "./lib/api/npc.js",
    "./particles": "./lib/api/particles.js",
    "./physics": "./lib/api/physics.js",
    "./player": "./lib/api/player.js",
    "./system": "./lib/api/system.js",
    "./time": "./lib/api/time.js",
    "./ui": "./lib/api/ui.js",
    "./utils": "./lib/api/utils.js"
  },
  "bin": {
    "splittime": "bin/splittime"
  },
  "scripts": {
    "build": "node bin/internal/build.mjs",
    "build:legacy": "run-p build:build-cli build:editor-server build:editor-client build:engine",
    "build:build-cli": "esbuild src/build-tools/build-cli.ts --bundle --platform=node --outfile=lib/build-cli.js --external:esbuild",
    "build:editor-client": "esbuild src/editor/client/index.tsx --bundle --platform=browser --jsx=automatic --outfile=lib/editor-client.js --sourcemap",
    "build:editor-server": "esbuild src/editor/server/main.ts --bundle --platform=node --outfile=lib/editor-server.js",
    "build:engine": "node bin/internal/build-engine",
    "build:internal-build-cli": "esbuild src/build-tools/internal-build-cli.ts --bundle --platform=node --outfile=lib/internal-build-cli.js --external:esbuild --sourcemap",
    "prebuild:type-declarations": "npm run build:internal-build-cli",
    "build:type-declarations:raw": "tsc --emitDeclarationOnly",
    "build:type-declarations:resolve-paths": "node lib/internal-build-cli.js resolve-paths",
    "build:type-declarations": "run-s build:type-declarations:raw build:type-declarations:resolve-paths",
    "clean": "rm -rf lib",
    "start": "node lib/editor-server.js",
    "dev:server": "",
    "test": "run-p test:*",
    "test:types": "tsc --noEmit",
    "test:unit": "uts -r esbuild-register src/engine-test",
    "watch:build:type-declarations": "ts-node-dev --transpile-only src/build-tools/engine/build-type-declarations.ts",
    "wmr": "wmr --cwd src/editor/wmr"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.15.2",
    "@types/convert-source-map": "^1.5.1",
    "@types/express": "^4.17.11",
    "@types/glob": "^7.1.3",
    "@types/howler": "~2.1.2",
    "@types/node": "^16.11.64",
    "@types/offscreencanvas": "^2019.6.3",
    "@types/rrdir": "^8.2.2",
    "@types/uglify-js": "^3.0.2",
    "es6-promise": "^4.2.8",
    "esbuild-register": "^3.3.3",
    "howler": "~2.1.3",
    "npm-run-all": "^4.1.5",
    "strip-json-comments": "^5.0.0",
    "typescript": "~4.8",
    "under-the-sun": "^1.0.1"
  },
  "dependencies": {
    "async-mutex": "^0.4.0",
    "chokidar": "^3.5.3",
    "concat-with-sourcemaps": "^1.1.0",
    "convert-source-map": "^1.7.0",
    "esbuild": "~0.17",
    "express": "^4.17.1",
    "find-root": "^1.1.0",
    "glob": "^7.1.6",
    "preact": "^10.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rrdir": "^8.2.1",
    "source-map-support": "^0.5.19",
    "sync-directory": "^2.2.17",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "uglify-js": "^3.13.0",
    "vue": "^2.6.12",
    "vue-async-computed": "^3.9.0",
    "wmr": "^3.8.0"
  },
  "files": [
    "*",
    "bin/*",
    "lib/**/*",
    "src/**/*",
    "static/**/*"
  ]
}
