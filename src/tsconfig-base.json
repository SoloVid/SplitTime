{
    "compilerOptions": {
        "rootDir": ".",
        "baseUrl": ".",
        "outDir": "../build/tsjs",
        "target": "ES2015",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "module": "CommonJS",
        "isolatedModules": true,
        "composite": true,
        "lib": ["DOM", "ES5", "ES2015"],
        "sourceMap": true,
        "incremental": true,
        "noEmitOnError": true,
        "emitDeclarationOnly": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
