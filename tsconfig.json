{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./build",
    "rootDir": "./src",
    "baseUrl": "./src",
    "target": "ES2017",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "CommonJS",
    "isolatedModules": true,
    "lib": ["DOM", "ES5", "ES2015"],
    "outDir": "./build/tmp",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/*.ts",
    "./src/api/**/*.ts",
    "./src/build-tools/**/*.ts",
    "./src/editor/server/**/*.ts",
    "./src/engine/**/*.ts",
    "./src/engine-test/**/*.ts",
    "./src/test-runner/**/*.ts"
  ]
}