{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./build/tsjs",
    "target": "es5",
    "module": "none",
    "lib": ["DOM", "ES5", "ScriptHost", "ES2015"],
    "typeRoots": ["../../build/@types/"],
    "sourceMap": true,
    "incremental": true,
    "noEmitOnError": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}