{
  "compilerOptions": {
    "target": "ES5",
    "moduleResolution": "node",
    "module": "CommonJS",
    "isolatedModules": true,
    "lib": ["DOM", "ES5", "ES2015"],
    "typeRoots": ["build/@types/"],
    "sourceMap": true,
    "incremental": true,
    "noEmitOnError": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "spt": ["./src/engine/splitTime"],
      "assets": ["./src/engine/assets/assets"]
    }
  }
}